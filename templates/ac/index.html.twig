{% extends 'base.html.twig' %}

{% block title %}Attachés{% endblock %}

{% block body %}
    <p class="display-4 text-center mb-5">{{ title }} <a href="/ac/add" class="text-primary text-decoration-none">+</a></p>
        {# total items count #}
        {# <div class="count">
            {{ pagination.getTotalItemCount }}
        </div> #}
    <table class="table text-center">
        <thead class=""> 
            <tr>
                <th scope="col">#ID</th>
                <th scope="col">Prénom(s)</th>
                <th scope="col">Nom</th>
                <th scope="col">E-mail</th>
                <th scope="col" colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for ac in pagination %}
                <tr {% if loop.index is odd %}class="color"{% endif %}>
                    <td>{{ ac.id }}</td>
                    <td>{{ ac.prenom }}</td>
                    <td>{{ ac.nom }}</td>
                    <td>{{ ac.email }}</td>
                    <td>
                        <a href="{{ path('ac-edit', {"id" : ac.id}) }}" class="btn btn-outline-warning">modifier</a>
                        <a href="{{ path('ac-delete', {"id" : ac.id}) }}" class="btn btn-outline-danger offset-1">supprimer</a>
                    </td>
                </tr>
            {% endfor %}
    </table>

    {# display navigation #}
    <ul class="pagination">
        <li class="page-item">
            {{ knp_pagination_render(pagination) }}
        </li>
    </li>
{% endblock %}
